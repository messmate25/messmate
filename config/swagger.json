    "/admin/weekly-menus": {
      "get": {
        "tags": ["Admin", "Menu"],
        "summary": "Get weekly menus",
        "description": "Retrieve weekly menus with optional filtering by week number",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "week_number",
            "in": "query",
            "description": "Week number (requires start_date)",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "start_date",
            "in": "query",
            "description": "Start date reference (required with week_number)",
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2024-01-01"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Weekly menus retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "menus": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/WeeklyMenuResponse"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing required parameters"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": ["Admin", "Menu"],
        "summary": "Set weekly menu",
        "description": "Create or update weekly menu",
        "security": [{"BearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["week_start_date", "menu"],
                "properties": {
                  "week_start_date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-01"
                  },
                  "menu": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/WeeklyMenuEntry"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Weekly menu set successfully"
          },
          "400": {
            "description": "Missing required fields"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
