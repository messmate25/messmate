        "security": [{"BearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["name", "estimated_prep_time", "monthly_limit", "weekly_limit", "extra_price", "description", "image"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Rice-Chicken Thali"
                  },
                  "estimated_prep_time": {
                    "type": "integer",
                    "example": 15
                  },
                  "monthly_limit": {
                    "type": "integer",
                    "example": 8
                  },
                  "weekly_limit": {
                    "type": "integer",
                    "example": 2
                  },
                  "extra_price": {
                    "type": "number",
                    "format": "float",
                    "example": 50.00
                  },
                  "description": {
                    "type": "string",
                    "example": "Chicken curry with rice and salad"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "Thali image file"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Thali added successfully"
          },
          "400": {
            "description": "Image file is required"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
