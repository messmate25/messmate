    "/student/weekly-selection": {
      "post": {
        "tags": ["Student"],
        "summary": "Submit weekly menu selection",
        "description": "Select meals for the week with automatic wallet deduction",
        "security": [{"BearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["selections", "week_start_date"],
                "properties": {
                  "week_start_date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-01"
                  },
                  "selections": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/SelectionEntry"
                    }
                  }
                }
              }
            }
          }
        },
