                  "properties": {
                    "dailyStats": {
                      "type": "object",
                      "properties": {
                        "breakfast": {
                          "$ref": "#/components/schemas/MealStats"
                        },
                        "lunch": {
                          "$ref": "#/components/schemas/MealStats"
                        },
                        "dinner": {
                          "$ref": "#/components/schemas/MealStats"
                        }
                      }
                    },
                    "weeklyStats": {
                      "type": "object",
                      "properties": {
                        "breakfast": {
                          "$ref": "#/components/schemas/MealStats"
                        },
                        "lunch": {
